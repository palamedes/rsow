
<div class="ui window segment maximized"
     id="stocks"
     data-slug="stocks"
     data-icon="chart line"
     data-title="Stock Bot"
>
  <div class="ui compact segment">
    <div class="ui tiny top attached menu headbar">
      <strong class="active header item">
        <i class="chart line icon"></i>
        Stock Bot
      </strong>
      <div class="item">
        <i class="calendar alternate outline icon"></i>
        Something here....
      </div>
      <%= render 'shared/window_buttons' %>
    </div>
    <div class="ui bottom attached segment stock-bot">
      <div class="upper">

        <div class="stocks">

          <div class="ui celled list">
            <% @companies.each do |company| %>
              <div class="item" data-symbol="<%= company.symbol %>">
                <div class="content">
                  <h3><%= company.symbol %></h3>
                  <%= company.name %>
                </div>
              </div>
            <% end %>
          </div>


        </div>

        <div id="chart" class="chart" data-url="<%= valuation_path('___') %>">
          <!-- Chart Body should go here -->
        </div>

        <div class="history">
          History
        </div>

      </div>
      <div class="lower">
        <div class="positions">
          Positions
        </div>
        <div class="bank">
          Bank
        </div>
      </div>
    </div>
  </div>
</div>

