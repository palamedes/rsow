<% content_for :style do %>
  <style>

    .solar.system {
      position: fixed;
      top: 50%;
      left: 50%;
      width: 500px;
      height: 500px;
      margin-top: -250px;
      margin-left: -250px;
    }

    .sun {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: scale(1) translate(-62.5px, -62.5px);
      background-image: url("/vellum_space/sun-tiles.png");
      background-size: cover;
      height: 125px;
      width: 125px;
      animation: animate-sun 2.5s steps(34) infinite;
    }
    @keyframes animate-sun {
      100% { background-position: -4250px; }
    }

    .orbit.outer {
      position: absolute;
      top:0;
      left:0;
      right:0;
      bottom:0;
      border: 1px #bbb dotted;
      border-radius: 100%;
      animation: spin-right 25s linear infinite;
    }
    .orbit.inner {
      position: absolute;
      top:100px;
      left:100px;
      right:100px;
      bottom:100px;
      border: 1px #bbb dotted;
      border-radius: 100%;
      animation: spin-right 12s linear infinite;
    }
    @keyframes spin-right {
      100% {
        transform: rotate(360deg);
      }
    }

    .mars {
      position: absolute;
      left: -12.5px;
      top: 50%;
      background-image: url("/vellum_space/mars.png");
      background-size: cover;
      width: 25px;
      height: 25px;
      animation: spin-left 20s linear infinite;
    }
    @keyframes spin-left {
      100% {
        transform: rotate(-360deg);
      }
    }

    button.menu {
      position: absolute;
      top: 4px;
      right: 4px;
      z-index: 100;
    }

    div.under.box {
      position: absolute;
      top: 30px;
      right: 0;
      width: 12%;
    }

    div.under.box ul {
      font-size: 20px;
      margin: 10px 0;
    }

  </style>
<% end %>

